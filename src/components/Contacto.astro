<section id="contacto" class="py-20 px-4 text-center">
  <h2 class="text-3xl font-bold mb-6">Contacto</h2>
  <p class="mb-8">¿Tienes un proyecto en mente? Escríbeme y lo hablamos.</p>
  <form id="contact-form" class="max-w-xl mx-auto grid gap-4">
    <input
      type="text"
      name="name"
      placeholder="Nombre"
      class="p-3 border rounded-lg"
      required
    />
    <input
      type="email"
      name="email"
      placeholder="Email"
      class="p-3 border rounded-lg"
      required
    />
    <textarea
      name="message"
      rows="5"
      placeholder="Mensaje"
      class="p-3 border rounded-lg"
      required></textarea>
    <button
      type="submit"
      class="px-6 py-3 bg-blue-600 text-white rounded-lg hover:bg-blue-700 cursor-pointer"
      >Enviar</button
    >
  </form>
</section>

<script>
  document.addEventListener("DOMContentLoaded", function () {
    emailjs.init("uTw7L7ES2wf6vktHu"); // Reemplaza con tu clave pública

    const form = document.getElementById("contact-form");

    form.addEventListener("submit", function (e) {
      e.preventDefault();

      emailjs.sendForm("service_2gh8pfg", "template_6k8uunb", this).then(
        () => {
          alert("¡Mensaje enviado correctamente!");
          form.reset();
        },
        (error) => {
          alert("Error al enviar el mensaje: " + error.text);
        }
      );
    });
  });
</script>
