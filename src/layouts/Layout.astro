---
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";
import "../styles/global.css";
---

<!doctype html>
<html lang="es" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Portafolio | Carlos Martínez</title>

    <!-- SEO Meta Tags -->
    <meta
      name="description"
      content="Diseñador y Desarrollador Web con más de 5 años de experiencia. Sitios web con código puro, frameworks o CMS como WordPress y Shopify."
    />
    <meta name="author" content="Carlos Eduardo Martínez Alvarado" />
    <meta
      name="keywords"
      content="diseñador web, desarrollador web, sitios web, WordPress, Shopify, desarrollo a medida, SEO, mantenimiento web, freelance México"
    />

    <!-- Open Graph (Facebook, LinkedIn, etc.) -->
    <meta property="og:title" content="Portafolio | Carlos Martínez" />
    <meta
      property="og:description"
      content="Diseñador y Desarrollador Web con más de 5 años de experiencia en desarrollo web y CMS."
    />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://tusitio.com" />
    <meta property="og:image" content="https://tusitio.com/imagen-og.jpg" />

    <!-- Twitter Cards -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content="Portafolio | Carlos Martínez" />
    <meta
      name="twitter:description"
      content="Diseñador y Desarrollador Web con más de 5 años de experiencia en desarrollo web y CMS."
    />
    <meta
      name="twitter:image"
      content="https://tusitio.com/imagen-twitter.jpg"
    />

    <link rel="icon" href="/favicon.ico" />
  </head>
  <body class="font-sans bg-white text-gray-800 select-none">
    <Header />
    <slot />
    <Footer />
  </body>
</html>
